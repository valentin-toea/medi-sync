{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "module": "esnext",
    "jsx": "react-native",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "client/*"
      ]
    }
  },
  "include": [
    "client/**/*.ts",
    "client/**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
